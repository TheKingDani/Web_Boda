@model IAB_MVC_V1.ViewModels.LoginViewModel

@{
    ViewBag.Title = "LoginUser";
}

<h2 class="form-title" style="text-align:center; font-size: 20px; font-weight: bold; margin-bottom: 20px;">
    Inicia Sesión con tu Correo</h2>

<form method="post" action="@Url.Action("LoginUser", "Login")" style="max-width: 400px; margin: auto;">
    <div style="margin-bottom: 15px;">
        <label style="display: block; font-weight: bold; margin-bottom: 5px;">Email</label>
        <input type="email" name="Email" required style="width: 100%; padding: 10px; border: 1px solid #ccc; 
        border-radius: 5px; font-size: 14px;"/>
    </div>
    <div style="margin-bottom: 15px;">
        <label style="display: block; font-weight: bold; margin-bottom: 5px; ">Password</label>
        <input type="password" name="Password" required 
               style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;"/>
    </div>
    <div style="display: flex; flex-direction: column; align-items: center; gap: 20px; margin-top: 20px;">
    <button type="submit"
            style="background-color: #ff4081; color: white; border: none; padding: 10px 20px; border-radius: 5px; 
            cursor: pointer; font-size: 14px;">
     Iniciar sesión </button>

    <a href="//localhost:44369/tblUsuarios/Create"
       style="color:#ff4081; text-decoration: none; font-size: 14px; font-weight: bold;">
        Sí eres nuevo Regístrate
    </a>
    <button onclick="window.location.href='https://accounts.google.com/AccountChooser/signinchooser?service=CPanel&continue=https%3A%2F%2Fadmin.google.com%2Fctech.mx%2FDashboard&hl=es&ddm=1&flowName=GlifWebSignIn&flowEntry=AccountChooser'" 
            style="background-color: #4285F4; color: white; border: none; padding: 10px 20px; border-radius: 5px; 
            cursor: pointer; font-size: 14px; display: flex; align-items: center; justify-content: center; gap: 15px; width: 250px;">
        <img src="https://www.gstatic.com/images/branding/product/1x/gsa_16dp.png"
             alt="Google logo" style="width: 16px; height: 16px;"> Continuar con Google
    </button>
        </div>
</form>







