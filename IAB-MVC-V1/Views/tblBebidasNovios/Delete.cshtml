@model IAB_MVC_V1.Models.tblBebidasNovios

@{
    ViewBag.Title = "Eliminar Bebidas de Novios";
}

<h2>Eliminar</h2>

<h3>¿Estás seguro de eliminar esta bebida?</h3>
<div>
    <h4>Bebidas</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Bebida
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblBebidas.bebida)
        </dd>

        <dt>
            Novia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblNovios.nombreNovia)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>
    }
</div>
