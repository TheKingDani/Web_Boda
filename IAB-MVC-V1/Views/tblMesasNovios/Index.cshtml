@model IEnumerable<IAB_MVC_V1.Models.tblMesasNovios>

@{
    ViewBag.Title = "Index";
}

<h2>Mesas</h2>

<p>
    @Html.ActionLink("Registrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Número
        </th>
        <th>
            Nombre
        </th>
        <th>
            Novia
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblMesasRegalos.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblNovios.nombreNovia)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idMesaNovio }) |
            @Html.ActionLink("Details", "Details", new { id=item.idMesaNovio }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idMesaNovio })
        </td>
    </tr>
}

</table>
