    <style>
        /* Ocultar submenús por defecto */
        .dropdown-menu {
            display: none;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

        /* Configuración base de los submenús */
        .dropdown-menu {
            display: grid; /* Cambiar a grid para controlar las columnas */
            opacity: 0;
            visibility: hidden; /* Mantiene los submenús ocultos */
            transition: opacity 0.3s ease, visibility 0s linear 0.3s; /* Transición suave para mostrar los submenús */
            grid-template-columns: repeat(5, 1fr); /* 5 columnas iguales */
            gap: 5px; /* Espacio entre los elementos */
            width: auto; /* Ajustar el ancho al contenido */
            left: 0; /* Alinear al borde izquierdo */
            top: 100%; /* Mostrar debajo del menú principal */
            position: absolute;
            z-index: 1000; /* Asegurar que esté sobre otros elementos */
            border: none; /* Asegura que no haya borde */
            border-radius: 0; /* Elimina bordes redondeados */
        }

        /* Mostrar submenús al pasar el mouse */
        .nav-item.dropdown:hover .dropdown-menu {
            opacity: 1; /* Hacerlo visible */
            visibility: visible; /* Hacerlo visible */
            transition: opacity 0.3s ease, visibility 0s linear 0s; /* Animación de aparición */
        }

        /* Estilo de los elementos del submenú */
        .dropdown-menu .dropdown-item {
            padding: 10px;
            text-align: left;
            color: #007e80;
            font-family: 'Candara', sans-serif; /* Cambiar a la fuente Candara */
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .dropdown-menu .dropdown-item:hover {
                color: #004853;
                background-color: #f8f9fa;
                border-radius: 5px;
            }
        /* Estilo del botón del menú en pantallas pequeñas */
