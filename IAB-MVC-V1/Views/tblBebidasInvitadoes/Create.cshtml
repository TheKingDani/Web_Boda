@model IAB_MVC_V1.Models.tblBebidasInvitado

@{
    ViewBag.Title = "Crear";
}

<h2>Registrar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bebidas de Invitado</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <span>Bebida de Novios</span>
                @Html.DropDownList("idBebidaNovios", null, "", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idBebidaNovios, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idInvitado, "Invitado", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idInvitado", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idInvitado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
