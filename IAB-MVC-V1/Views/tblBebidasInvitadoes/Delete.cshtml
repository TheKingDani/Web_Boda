@model IAB_MVC_V1.Models.tblBebidasInvitado

@{
    ViewBag.Title = "Eliminar Bebidas";
}

<h2>Eliminar</h2>

<h3>¿Estás seguro de eliminar esta bebida?</h3>
<div>
    <h4>Bebida de invitado</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Bebida de los Novios
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblBebidasNovios.idBebidaNovios)
        </dd>

        <dt>
            Apodo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblInvitados.apodo)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>
    }
</div>
