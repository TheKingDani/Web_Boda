@model IAB_MVC_V1.Models.tblRedesProveedores

@{
    ViewBag.Title = "Create";
}
@{
    Layout = "~/Views/Shared/_Layout - Copia.cshtml";
}
<div class="content" style="margin-left: 0;">
    <div>
        @Html.ActionLink("Regresar a la Lista", "Index")
    </div>


    <div class="form-box">
        <h4 class="title">Social</h4>
        <p>Incluya cualquier enlace a redes sociales, videos o su blog. Asegúrese de incluir 'http://www...' como se leería en una dirección web. Por ejemplo: http://www.facebook.com/Wedding Manager info@example.com o http://www.instagram.com/Wedding Manager UKhq</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-6">
            <div class="form-group">
                <div class="col-md-10">
                    <span>Red Social</span>
                    @Html.DropDownList("idRedSocial", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idRedSocial, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.idProveedor, "Proveedor", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("idProveedor", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idProveedor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.link,"URL", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.link, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.link, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="col-lg-4 col-md-4 col-sm-6">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn blue" />
                </div>
            </div>
        </div>



    </div>
        }
    </div>
</div>

