@model IEnumerable<IAB_MVC_V1.Models.tblSeleccionarOfertas>

@{
    ViewBag.Title = "Index";
}

<h2>Selección de Ofertas</h2>

<p>
    @Html.ActionLink("Crear Nueva Oferta", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Oferta
        </th>
        <th>
           Nombre del Negocio
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tblOfertasProveedores.idOfertaProveedor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblProveedores.nomNegocio)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idSeleccionOferta }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idSeleccionOferta }) |
            @Html.ActionLink("Elimar", "Delete", new { id=item.idSeleccionOferta })
        </td>
    </tr>
}

</table>
