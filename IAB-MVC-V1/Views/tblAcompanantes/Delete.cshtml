@model IAB_MVC_V1.Models.tblAcompanantes

@{
    ViewBag.Title = "Eliminar Acompañante";
}

<h2>Eliminar</h2>

<h3>¿Estás seguro de eliminar Acompañante?</h3>
<div>
    <h4>Acompañantes</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Acompañante
        </dt>

        <dd>
            @Html.DisplayFor(model => model.acompanante)
        </dd>

        <dt>
            Confirmado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.confirmado)
        </dd>

        <dt>
            Mesa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mesa)
        </dd>

        <dt>
           Apodo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblInvitados.apodo)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar", "Index")
        </div>
    }
</div>
