@model IAB_MVC_V1.Models.tblTipoInvitado

@{
    ViewBag.Title = "Eliminar Invitación";
}

<h2>Eliminar</h2>

<h3>¿Estas seguro de eliminar la Invitación?</h3>
<div>
    <h4>Invitaciones</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tipo de Invitado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipoInvitado)
        </dd>

        <dt>
            Titulo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tituloCorreo)
        </dd>

        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            Bienvenida
        </dt>

        <dd>
            @Html.DisplayFor(model => model.archivoBienvenida)
        </dd>

        <dt>
            Novia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblNovios.nombreNovia)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar", "Index")
        </div>
    }
</div>
