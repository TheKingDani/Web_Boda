@model IEnumerable<IAB_MVC_V1.Models.tblEstados>

@{
    ViewBag.Title = "Index";
}

<h2>Estados</h2>

<p>
    @Html.ActionLink("Crear Nuevo Estado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre del Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreEstado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idEstado }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idEstado }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idEstado })
        </td>
    </tr>
}

</table>
