@model IAB_MVC_V1.Models.tblProveedores

@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_Layout - Copia.cshtml";
}
<div class="content" style="margin-left: 0;">

    <form class="business-supplier bns-form">
        <div class="form-box">
            <h4 class="title">Detalles de contacto</h4>
            <hr />
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label class="label-title">Nombre del Negocio</label>
                        <input type="text" class="form-control" placeholder="Nombre" value="@Html.DisplayFor(model => model.nomNegocio)">
                    </div>
                    <div class="form-group">
                        <label class="label-title">Categoria</label>
                        <input type="text" class="form-control" placeholder="Nombre" value="@Html.DisplayFor(model => model.idCategoriaProveedor)">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 d-lg-block d-md-none d-sm-none col-sm-6"></div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label class="label-title">URL de su sitio Web</label>
                        <input type="text" class="form-control" placeholder="URL" value="@Html.DisplayFor(model => model.sitioWeb)">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label class="label-title">Numero de Télefono</label>
                        <input type="text" class="form-control" placeholder="Telefono" value="@Html.DisplayFor(model => model.tel)">
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <label class="label-title">Dirección:</label>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Telefono" value="@Html.DisplayFor(model => model.direccion)">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Ciudad" value="@Html.DisplayFor(model => model.idEstado)">
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Ciudad" value="@Html.DisplayFor(model => model.idMunicipio)">
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="form-group">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Pais" value="@Html.DisplayFor(model => model.pais)">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="codigo postal" value="@Html.DisplayFor(model => model.codigoPostal)">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">

                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <label class="label-title">Dirección de correo: </label>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Pais" value="@Html.DisplayFor(model => model.email)">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <button class="btn blue gradient"><i class="fa fa-envelope m-r5"></i>Trigger test enquiry</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>