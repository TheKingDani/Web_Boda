@model IEnumerable<IAB_MVC_V1.Models.tblPresupuestos>

@{
    ViewBag.Title = "Index";
}

<h2>Presupuesto</h2>

<p>
    @Html.ActionLink("Crear Nuevo Presupuesto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Costo
        </th>
        <th>
            Fecha de Pago
        </th>
        <th>
            Descripción
        </th>
        <th>
            Observaciones
        </th>
        <th>
           Nombre de la Novia
        </th>
        <th>
           Nombre del Producto
        </th>
        <th>
           ID Servicio del Proveedor
        </th>
        <th>
           Servicio del Proveedor
        </th>
        <th>
           Estatus del Pago
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.costo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaPago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.observaciones)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblNovios.nombreNovia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblProductosProveedores.nombreProducto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblServiciosProveedores.idServicioProveedor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblServiciosCategoriasProvedores.serviciosProveedores)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblStatusPagos.nomStatus)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idPresupuesto }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idPresupuesto }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idPresupuesto })
        </td>
    </tr>
}

</table>
