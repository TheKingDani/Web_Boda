@model IAB_MVC_V1.Models.tblPresupuestos

@{
    ViewBag.Title = "Edit";
}

<h2></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Presupuesto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idPresupuesto)

        <div class="form-group">
            <div class="col-md-10">
                <span>Novios</span>
                @Html.DropDownList("idNovios", null, htmlAttributes: new { @class = "form-control" })
