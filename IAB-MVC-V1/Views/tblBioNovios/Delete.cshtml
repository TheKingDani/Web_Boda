@model IAB_MVC_V1.Models.tblBioNovios

@{
    ViewBag.Title = "Eliminar biografías";
}

<h2>Eliminar</h2>

<h3>¿Estás seguro de eliminar esta biografía?</h3>
<div>
    <h4>Biografías</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Género
        </dt>

        <dd>
            @Html.DisplayFor(model => model.idGenero)
        </dd>

        <dt>
            Biografía
        </dt>

        <dd>
            @Html.DisplayFor(model => model.biografia)
        </dd>

        <dt>
            Novia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblNovios.nombreNovia)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>
    }
</div>
