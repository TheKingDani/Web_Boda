@model IEnumerable<IAB_MVC_V1.Models.tblMesasRegalos>

@{
    ViewBag.Title = "Index";
}

<h2>Mesa de Regalos</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
             URL
        </th>
        <th>
            Teléfono 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.url)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idMesaRegalo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idMesaRegalo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idMesaRegalo })
        </td>
    </tr>
}

</table>
